drop table Item;
drop table Human;

create table Human(
    id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    name varchar(100),
    age int check ( age > 10 )
);

create table Item(
    id int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    human_id int references Human(id) on delete cascade,
    name varchar(100)
);

Insert into Human(name, age) values ('Andrey', 19);
insert into Item(human_id, name) values (1, 'Book');

select * from human;
select * from item;

delete from Human where id=1;

